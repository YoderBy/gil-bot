# Gil WhatsApp Bot Environment Variables
# Copy this file to .env and fill with real values

# App settings
APP_NAME=Gil-WhatsApp-Bot
DEBUG=False
API_V1_STR=/api/v1

# CORS settings (comma-separated list)
CORS_ORIGINS=["*"]

# MongoDB settings
MONGODB_URL=mongodb://user:pass@mongo:27017/gil_whatsapp_bot?authSource=admin
MONGODB_DB_NAME=gil_whatsapp_bot
MONGO_USER=user
MONGO_PASSWORD=pass

# OpenAI settings
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4
RETRIEVAL_LLM_MODEL=gpt-3.5-turbo
GENERATION_LLM_MODEL=gpt-4

# WhatsApp API settings (optional)
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Base URL for the service
BASE_URL=https://gil-bot.yosefbyd.com

# JWT settings (if needed)
JWT_SECRET_KEY=your-random-generated-jwt-secret-key

# Cloudflare settings (for deployment)
CLOUDFLARE_TOKEN=your-cloudflare-tunnel-token
